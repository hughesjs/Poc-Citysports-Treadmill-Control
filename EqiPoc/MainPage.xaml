<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EqiPoc.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            
            <Button
                x:Name="StartBtn"
                Text="Start"
                SemanticProperties.Hint="Starts the Treadmill"
                Clicked="OnStartTreadmill"
                HorizontalOptions="Center"/>
            
            <Button
                x:Name="StopBtn"
                Text="Stop"
                SemanticProperties.Hint="Stops the Treadmill"
                Clicked="OnStopTreadmill"
                HorizontalOptions="Center" />
            
            <Button x:Name="DebugBtn"
                Text="Debug"
                Clicked="OnDebug"
                HorizontalOptions="Center" />
            
            <Label
                x:Name="BluetoothStatusLbl"
                Text="Disconnected"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

